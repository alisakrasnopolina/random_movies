        <item name="toolbarColor">@color/white</item>
        <item name="toolbarIndicator">@drawable/back_arrow</item>
        <item name="gradientBorderButtonStyle">@style/GradientBorderButton.Light</item>
    </style>

    <style name="GradientBorderButton.Light" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/gradient</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
