    <style name="Theme.Random_movie" parent="Base.Theme.Random_movie" />

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="toolbarColor">@color/white</item>
        <item name="toolbarIndicator">@drawable/back_arrow</item>
        <item name="gradientBorderButtonStyle">@style/GradientBorderButton.Light</item>
    </style>

    <style name="Light" parent="AppTheme">
        <item name="textColor">@color/black</item>
        <item name="metaColor">#606060</item>
        <item name="color">#ffffff</item>
    </style>

    <style name="Dark" parent="AppTheme">
        <item name="textColor">@color/white</item>
        <item name="metaColor">#aeaeae</item>
        <item name="color">#000000</item>
    </style>

    <style name="Theme.RandomMovie" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
