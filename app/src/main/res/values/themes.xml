        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="gradientBorderButtonStyle">@style/GradientBorderButton.Light</item>
    </style>

    <style name="roundedImageView" parent="">
