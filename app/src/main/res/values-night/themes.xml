<resources xmlns:tools="http://schemas.android.com/tools">
    <color name="textColor">#FFFFFF</color>
    <color name="textColor_subtitles">#99FFFFFF</color>
    <style name="Base.Theme.Random_movie" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColor">@color/textColor</item>
        <item name="gradientBorderButtonStyle">@style/GradientBorderButton.Dark</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your dark theme here -->
        <item name="toolbarColor">@color/black</item>
        <item name="toolbarIndicator">@drawable/back_arrow_white</item>
        <item name="gradientBorderButtonStyle">@style/GradientBorderButton.Dark</item>
    </style>

    <style name="GradientBorderButton.Dark" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/gradient_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@null</item>
    </style>
</resources>